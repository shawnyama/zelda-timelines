---
import { Icon } from "astro-icon"
import { nodes } from "../data/games"
const defaultSpacing = 250
const width: number = (nodes.length + 2) * defaultSpacing
const height: number = 500
// change this to preact
---

<main>
    <svg class="timeline" width={width} height={height}>
        {
            nodes.map((node: any, n) => (
                <g>
                    {n > 0 && (
                        <rect
                            x={defaultSpacing * n + 95}
                            y={height / 2}
                            height={4}
                            width={140}
                            fill="blue"
                        />
                    )}
                    <g
                        class="game"
                        style={{
                            transformOrigin: `
                            ${defaultSpacing * (n + 1) + 35}px  
                            ${height / 2}px`,
                        }}
                    >
                        <rect
                            class="rect-for-hover"
                            x={defaultSpacing * (n + 1) - 35}
                            y={height / 2 - 50}
                            height={140}
                            width={140}
                            fill="transparent"
                        />
                        <Icon
                            name={node.imageName}
                            x={defaultSpacing * (n + 1)}
                            y={0}
                            width={80}
                            title={node.name}
                        />
                        <text
                            class="game-name"
                            x={defaultSpacing * (n + 1) + 35}
                            y={height / 2}
                            dominant-baseline="middle"
                            text-anchor="middle"
                            dy={70}
                        >
                            {node.name}
                        </text>
                    </g>
                </g>
            ))
        }
    </svg>
</main>
